import java.util.Scanner;
public class tersYildiz {
    public static void main(String[] args) {
            int n,i,j;
            Scanner input = new Scanner(System.in);
            System.out.print("basamak sayisini girin ");
            n = input.nextInt();
            for(i=1;i<=n;i++){
                for(j=n; j>=i; j--){
                    System.out.print("*");
                }
                System.out.println("");
            }
        }
    }
