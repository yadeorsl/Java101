import java.util.Scanner;

public class dongu {
    public static void main(String[] args) {
        int sayi,bas,top,i,j;
        j=0;
        top=0;
        Scanner inp=new Scanner(System.in);
        System.out.println("bir sayÄ± giriniz");
        sayi= inp.nextInt();
        for (i=0;i<=sayi;i++){
            if (i%3==0&&i%4==0){
              top+=i;
              j++;
            }

        }
       double ort=top/(j-1);
        System.out.println(ort);



    }
}
